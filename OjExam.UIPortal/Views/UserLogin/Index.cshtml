
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="renderer" content="webkit">
    <title>Index</title>

    <!-- CSS文件 -->
    <link href="~/Content/Hplus/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Hplus/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/Hplus/css/animate.css" rel="stylesheet" />
    <link href="~/Content/Hplus/css/style.css" rel="stylesheet" />

    <!-- 全局js -->
    <script src="~/Content/Hplus/js/jquery.min.js"></script>
    <script src="~/Content/Hplus/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</head>
<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">瓯</h1>
            </div>
            <h3>欢迎使用 瓯江考试系统</h3>
            @using (Html.BeginForm("Login","UserLogin", new { @class = "m-t", role = "form" }))
            {
                <div class="form-group">
                    <input type="text" name="LoginId" class="form-control" placeholder="用户名" required="">
                </div>
                <div class="form-group">
                    <input type="password" name="Pwd" class="form-control" placeholder="密码" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">登 录</button>
            }
        </div>
    </div>


</body>

</html>
